<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Kyosk" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/philippine_yellow</item>
        <item name="colorPrimaryVariant">@color/davy_grey</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="bottomNavigationStyle">@style/BottomNav</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconTint">@color/cultured</item>
        <item name="chipBackgroundColor">@drawable/category_selection_chip</item>
        <item name="fontFamily">@font/sf_pro_regular</item>
        <item name="android:fontFamily">@font/sf_pro_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/category_selection_chip_text_color</item>
        <item name="rippleColor">@color/liberty</item>
        <item name="singleSelection">true</item>
        <item name="selectionRequired">true</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>